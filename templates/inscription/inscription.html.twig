{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block content %}
    <div class="login_container register">
    {{ form_start(registrationForm, {'attr': {'class': 'login_form'}} ) }}
            <h1>Inscription</h1>
            
            <div class="text_login">
                <div class="placeholder">
                    <label for="inputEmail">Email</label>
                </div>
                {{ form_widget(registrationForm.email) }}
            </div>
            <div class="text_login">
                <div class="placeholder">
                    <label for="inputEmail">Nom</label>
                </div>
                {{ form_widget(registrationForm.nom) }}
            </div>
            <div class="text_login">
                <div class="placeholder">
                    <label for="inputEmail">Prénom</label>
                </div>
                {{ form_widget(registrationForm.prenom) }}
            </div>

            <div class="text_login">
                <div class="placeholder">
                    <label for="inputEmail">Téléphone</label>
                </div>
                {{ form_widget(registrationForm.telephone) }}
            </div>

            <div class="text_login">
                <div class="placeholder">
                    <label for="inputEmail">Mot de passe</label>
                </div>
                {{ form_widget(registrationForm.plainPassword) }}
            </div>

            <div class="button_container">
                <button class="button" type="submit">Inscription</button>
            </div>
        {{ form_end(registrationForm) }}
    </div>
{% endblock %}
